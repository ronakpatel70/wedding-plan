- content_for(:title, 'Settings')
- show_errors_for(@user)

= form_for(@user, builder: FormBuilder) do |f|
  .row
    = f.text_col :first_name, 3
    = f.text_col :last_name, 3, col: 'end'
  .row
    = f.text_col :email, 4
  .row
    = f.text_col :phone, 4
  .row
    = f.password_col :password, 4
  .row
    .small-5.columns
      %button.button Save
